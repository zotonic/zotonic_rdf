{require_min_otp_vsn, "22"}.

{erl_opts, [
  debug_info
 ]
}.

{deps, [
  {zotonic_stdlib, "1.15.1"}
]}.

{xref_checks, [
    undefined_function_calls,
    locals_not_used,
    deprecated_function_calls
]}.

{xref_ignores, [
]}.

{project_plugins, [rebar3_ex_doc]}.

{hex, [{doc, ex_doc}]}.

{ex_doc, [
    {source_url, <<"https://github.com/zotonic/zotonic_rdf">>},
    {extras, [<<"README.md">>, <<"LICENSE">>]},
    {main, <<"readme">>}
]}.
